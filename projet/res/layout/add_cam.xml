<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/ScrollView01" android:layout_height="fill_parent"
	android:layout_width="fill_parent">
	<TableLayout android:orientation="horizontal"
		android:stretchColumns="1" android:layout_height="fill_parent"
		android:layout_width="fill_parent" android:gravity="fill"
		android:scrollbars="vertical">
		<TextView android:hint="@string/addCam" android:textSize="12pt"
			android:gravity="center" />
		<Button android:text="@string/addCamQR" android:id="@+id/bqr"
			android:layout_height="wrap_content" android:gravity="center"
			android:layout_width="fill_parent" android:layout_weight="1" />
		<TableRow>
			<TextView android:text="@string/description" android:id="@+id/tid" />
			<EditText android:hint="@string/descriptionHint" android:id="@+id/eid"
				android:gravity="center" />
		</TableRow>
		<TableRow>
			<TextView android:text="@string/login" android:id="@+id/tlogin" />
			<EditText android:hint="@string/loginHint" android:id="@+id/elogin"
				android:gravity="center" />
		</TableRow>
		<TableRow>
			<TextView android:text="@string/pass" android:id="@+id/tpass" />
			<EditText android:hint="@string/passHint" android:id="@+id/epass"
				android:gravity="center" android:password="true" />
		</TableRow>
		<TableRow>
			<TextView android:text="@string/ip" android:id="@+id/tip" />
			<EditText android:hint="@string/ipHint" android:id="@+id/eip"
				android:gravity="center" />
		</TableRow>

		<TableRow>
			<TextView android:text="@string/port" android:id="@+id/tport" />
			<EditText android:hint="@string/portHint" android:id="@+id/eport"
				android:gravity="center" android:numeric="decimal" />
		</TableRow>
		<TableRow>
			<TextView android:text="@string/chan" android:id="@+id/tchan" />
			<EditText android:hint="@string/chanHint" android:id="@+id/echan"
				android:gravity="center" android:numeric="decimal" />
		</TableRow>
		<!--<TableRow> <TextView android:text="Protocol :" android:id="@+id/tprot" 
			/> <Spinner android:id="@+id/spinner" android:layout_width="fill_parent" 
			android:layout_height="wrap_content" android:prompt="@string/protocol_prompt" 
			/> </TableRow> -->
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android">
			<Button android:id="@+id/add" android:text="@string/add"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_weight="1" />
			<Button android:id="@+id/ret" android:text="@string/cancel"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_weight="1" />
		</LinearLayout>
	</TableLayout>
</ScrollView>
	