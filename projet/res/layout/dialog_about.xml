<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layout_root" android:orientation="horizontal"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:padding="10dp">
	<ImageView android:id="@+id/about_image"
		android:layout_width="wrap_content" android:layout_height="fill_parent" 
		android:layout_weight="0.5"/>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/layout_root" android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_weight="1.5">
		<TextView android:id="@+id/about" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:textColor="#FFF" 
			android:layout_weight="0.25" android:gravity="center"/>
		<Button android:id="@+id/aboutClose" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:text="@string/close"
			android:layout_weight="0.75" />
	</LinearLayout>
</LinearLayout>